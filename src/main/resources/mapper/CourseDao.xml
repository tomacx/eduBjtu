<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace=".dao.CourseDao">

    <resultMap type=".entity.Course" id="CourseMap">
        <result property="courseid" column="courseId" jdbcType="BIGINT"/>
        <result property="intro" column="intro" jdbcType="VARCHAR"/>
        <result property="outline" column="outline" jdbcType="VARCHAR"/>
        <result property="calendar" column="calendar" jdbcType="VARCHAR"/>
        <result property="teacherinfo" column="teacherInfo" jdbcType="VARCHAR"/>
        <result property="resource" column="resource" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CourseMap">
        select
courseIdintrooutlinecalendarteacherInforesource
        from course
        where courseId = #{courseid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CourseMap">
        select
courseIdintrooutlinecalendarteacherInforesource
        from course
        <where>
            <if test="courseid != null">
                and courseId = #{courseid}
            </if>
            <if test="intro != null and intro != ''">
                and intro = #{intro}
            </if>
            <if test="outline != null and outline != ''">
                and outline = #{outline}
            </if>
            <if test="calendar != null and calendar != ''">
                and calendar = #{calendar}
            </if>
            <if test="teacherinfo != null and teacherinfo != ''">
                and teacherInfo = #{teacherinfo}
            </if>
            <if test="resource != null and resource != ''">
                and resource = #{resource}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from course
        <where>
            <if test="courseid != null">
                and courseId = #{courseid}
            </if>
            <if test="intro != null and intro != ''">
                and intro = #{intro}
            </if>
            <if test="outline != null and outline != ''">
                and outline = #{outline}
            </if>
            <if test="calendar != null and calendar != ''">
                and calendar = #{calendar}
            </if>
            <if test="teacherinfo != null and teacherinfo != ''">
                and teacherInfo = #{teacherinfo}
            </if>
            <if test="resource != null and resource != ''">
                and resource = #{resource}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="courseid" useGeneratedKeys="true">
        insert into course(introoutlinecalendarteacherInforesource)
        values (#{intro}#{outline}#{calendar}#{teacherinfo}#{resource})
    </insert>

    <insert id="insertBatch" keyProperty="courseid" useGeneratedKeys="true">
        insert into course(introoutlinecalendarteacherInforesource)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.intro}#{entity.outline}#{entity.calendar}#{entity.teacherinfo}#{entity.resource})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="courseid" useGeneratedKeys="true">
        insert into course(introoutlinecalendarteacherInforesource)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.intro}#{entity.outline}#{entity.calendar}#{entity.teacherinfo}#{entity.resource})
        </foreach>
        on duplicate key update
intro = values(intro)outline = values(outline)calendar = values(calendar)teacherInfo = values(teacherInfo)resource = values(resource)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update course
        <set>
            <if test="intro != null and intro != ''">
                intro = #{intro},
            </if>
            <if test="outline != null and outline != ''">
                outline = #{outline},
            </if>
            <if test="calendar != null and calendar != ''">
                calendar = #{calendar},
            </if>
            <if test="teacherinfo != null and teacherinfo != ''">
                teacherInfo = #{teacherinfo},
            </if>
            <if test="resource != null and resource != ''">
                resource = #{resource},
            </if>
        </set>
        where courseId = #{courseid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from course where courseId = #{courseid}
    </delete>

</mapper>

